<%- include ('partials/_header'); %>

<div class="container">
  <!-- FORMULARIO -->
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h1 class="text-center">To Do</h1>
        <form action="/add" method="POST">
          <!-- titulo -->
          <div class="form-group">
            <!-- <h2 class="text-center">To Do</h2> -->
            <input
              type="text"
              name="title"
              placeholder="Inserta un titulo"
              class="form-control"
              value="<%= task.title %>"
            />
          </div>
          <!-- descripcion -->
          <div class="form-group">
            <textarea
              name="description"
              id=""
              cols="80"
              class="form-control"
              placeholder="Escribe la descripcion" 
            > <%= task.description %></textarea>
          </div>
          <button type="submit" class="btn btn-outline-info btn-block">
            Agregar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>
<% include ('partials/_footer') %>
